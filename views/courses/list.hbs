

<div class="container mt-5">
  <h1>Listado de Cursos</h1>
  <a href="/courses/add" class="btn btn-success mb-3">Agregar Nuevo Curso</a>
  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Título</th>
        <th>Descripción</th>
        <th>Instructor</th>
        <th>Duración (horas)</th>
        <th>Precio (USD)</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <td>{{ this.title }}</td>
          <td>{{ this.description }}</td>
          <td>{{ this.instructor }}</td>
          <td>{{ this.duration }}</td>
          <td>{{ this.price }}</td>
          <td>
            <a href="/courses/edit/{{ this._id }}" class="btn btn-warning btn-sm">Editar</a>
            <form action="/courses/delete/{{ this._id }}" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            </form>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="6" class="text-center">No hay cursos disponibles.</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

